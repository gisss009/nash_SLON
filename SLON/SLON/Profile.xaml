<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SLON.Profile"
             BackgroundColor="#141414">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Profile Section -->
                <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">

                    <!-- Profile Picture -->
                    <Frame BackgroundColor="Transparent"
                           WidthRequest="150"
                           HeightRequest="150"
                           CornerRadius="75"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"
                           Padding="0"
                           HasShadow="False">
                        <ImageButton x:Name="AvatarButton"
                                     Source="default_profile_icon.png"
                                     WidthRequest="160"
                                     HeightRequest="160"
                                     CornerRadius="75"
                                     Aspect="AspectFill"
                                     Clicked="OnAvatarButtonClicked" />
                    </Frame>

                    <!-- Name and Vocation -->
                    <VerticalStackLayout Padding="10,0,0,0"
                                         VerticalOptions="Center"
                                         Grid.Column="1">
                        <!-- Editable Name -->
                        <Entry x:Name="NameInput"
                               Text="Name"
                               FontSize="30"
                               TextColor="White"
                               FontAttributes="Bold"
                               IsReadOnly="True"
                               HorizontalTextAlignment="Start"
                               BackgroundColor="Transparent"/>

                        <!-- Editable Vocation -->
                        <Entry x:Name="VocationInput"
                               Text="Vocation"
                               FontSize="18"
                               TextColor="White"
                               IsReadOnly="True"
                               HorizontalTextAlignment="Start"
                               BackgroundColor="Transparent"/>
                    </VerticalStackLayout>

                    <!-- Edit, Add Event, and Save Icons -->
                    <Grid Grid.ColumnSpan="2"
                          HorizontalOptions="End"
                          VerticalOptions="Start"
                          Margin="0,10,10,0">

                        <!-- Иконка создания мероприятия -->
                        <ImageButton x:Name="AddEventIcon"
                                     Source="add_icon1.png"
                                     BackgroundColor="Transparent"
                                     WidthRequest="32"
                                     HeightRequest="32"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"
                                     Margin="0,0,35,0"  
                            Clicked="OnAddEventIconClicked" />

                        <!-- Edit Icon -->
                        <ImageButton x:Name="EditIcon"
                                     Source="edit_icon.png"
                                     BackgroundColor="Transparent"
                                     WidthRequest="24"
                                     HeightRequest="24"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"
                                     Margin="30,0,0,0"
                                     Clicked="OnEditIconClicked" />

                        <!-- Save Icon -->
                        <ImageButton x:Name="SaveIcon"
                                     Source="save_icon.png"
                                     BackgroundColor="Transparent"
                                     WidthRequest="24"
                                     HeightRequest="24"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"
                                     Margin="30,0,0,0"
                                     IsVisible="False"
                                     Clicked="OnEditIconClicked" />
                    </Grid>
                </Grid>

                <!-- Categories Section -->
                <Frame BackgroundColor="Gray"
                       CornerRadius="10"
                       Padding="10">
                    <VerticalStackLayout>

                        <!-- Categories Title -->
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Categories"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start" />

                            <!-- Add Category Button -->
                            <ImageButton x:Name="AddCategoryIcon"
                                         Source="add_icon.png"
                                         BackgroundColor="Transparent"
                                         WidthRequest="24"
                                         HeightRequest="24"
                                         HorizontalOptions="End"
                                         VerticalOptions="Center"
                                         IsVisible="False" 
                                         Clicked="OnAddCategoryIconClicked" />
                        </Grid>

                        <!-- Categories Content -->
                        <FlexLayout x:Name="CategoriesContainer"
                                    Direction="Row"
                                    Wrap="Wrap"
                                    Margin="0,10,0,0">
                        </FlexLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Events Section -->
                <Frame BackgroundColor="Gray"
                       CornerRadius="10"
                       Padding="10">
                    <VerticalStackLayout>
                        <!-- Events Title -->
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Events"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start" />
                        </Grid>

                        <!-- Events Content -->
                        <FlexLayout x:Name="EventsContainer"
                                    Direction="Row"
                                    Wrap="Wrap"
                                    Margin="0,10,0,0">
                        </FlexLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Resume Section -->
                <Frame BackgroundColor="Gray"
                       CornerRadius="10"
                       Padding="10"
                       VerticalOptions="FillAndExpand">
                    <ScrollView>
                        <Editor x:Name="ResumeEditor"
                                Placeholder="Resume..."
                                BackgroundColor="Transparent"
                                TextColor="White"
                                FontSize="16"
                                AutoSize="TextChanges"
                                IsReadOnly="True" />
                    </ScrollView>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <!-- CategoryPopup Section -->
        <ContentView x:Name="CategoryPopup" IsVisible="False" BackgroundColor="#80000000">
            <Frame BackgroundColor="#2E2E2E" CornerRadius="10" Padding="20" Margin="40">
                <VerticalStackLayout Spacing="15">
                    <!-- Название категории -->
                    <Label x:Name="CategoryNameLabel"
                           Text="Category Name"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <!-- Поле для тегов -->
                    <VerticalStackLayout>
                        <Label Text="Tags"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="White" />
                        <ScrollView VerticalOptions="FillAndExpand" HeightRequest="150">
                            <Editor x:Name="TagsEditor"
                                    Placeholder="Enter tags... Tag1 Tag2 Tag3"
                                    BackgroundColor="Gray"
                                    TextColor="White"
                                    FontSize="16"
                                    AutoSize="TextChanges" />
                        </ScrollView>
                    </VerticalStackLayout>

                    <!-- Поле для описания навыков -->
                    <VerticalStackLayout>
                        <Label Text="Skills"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="White" />
                        <ScrollView VerticalOptions="FillAndExpand" HeightRequest="150">
                            <Editor x:Name="SkillsEditor"
                                    Placeholder="Describe your skills..."
                                    BackgroundColor="Gray"
                                    TextColor="White"
                                    FontSize="16"
                                    AutoSize="TextChanges" />
                        </ScrollView>
                    </VerticalStackLayout>

                    <!-- Кнопка сохранения -->
                    <Button Text="Save"
                            BackgroundColor="#6200EE"
                            TextColor="White"
                            Clicked="OnSaveCategoryClicked" />
                </VerticalStackLayout>
            </Frame>
        </ContentView>

        <!-- EventPopup Section -->
        <ContentView x:Name="EventPopup" IsVisible="False" BackgroundColor="#80000000">
            <ScrollView>
                <Frame BackgroundColor="#141414" CornerRadius="10" Padding="20" Margin="40">
                    <VerticalStackLayout Spacing="20">
                        <!-- Header Section -->
                        <Grid ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center">
                            <!-- Cancel Icon -->
                            <ImageButton x:Name="CancelEventButton"
                                         Source="delete_icon.png"
                                         BackgroundColor="Transparent"
                                         WidthRequest="24"
                                         HeightRequest="24"
                                         Clicked="OnCancelEventClicked" />
                            <!-- Title -->
                            <Label Text="Create event card"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Grid.Column="1" />
                            <!-- Save Icon -->
                            <ImageButton x:Name="SaveEventButton"
                                         Source="save_icon.png"
                                         BackgroundColor="Transparent"
                                         WidthRequest="24"
                                         HeightRequest="24"
                                         Clicked="OnEditSaveEventClicked"
                                         Grid.Column="2" />
                        </Grid>

                        <!-- Event Name -->
                        <Frame BackgroundColor="#292929" CornerRadius="10" Padding="10" BorderColor="Transparent">
                            <Entry x:Name="EventNameInput"
                                   Placeholder="Event's name"
                                   TextColor="#FFFFFF"
                                   FontSize="18"
                                   BackgroundColor="Transparent"
                                   IsReadOnly="False"
                                   HorizontalTextAlignment="Center" />
                        </Frame>

                        <!-- Categories Section -->
                        <VerticalStackLayout>
                            <Label Text="Categories"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center" />

                            <!-- Первый ряд кнопок -->
                            <Grid ColumnDefinitions="*, *" RowDefinitions="Auto" Margin="0,5,0,0">
                                <Button x:Name="CategoryIT"
                                        Text="IT"
                                        BackgroundColor="DarkGray"
                                        TextColor="#FFFFFF"
                                        CornerRadius="10"
                                        Margin="2"
                                        Clicked="OnCategoryButtonClicked" />
                                <Button x:Name="CategoryCreation"
                                        Text="Creation"
                                        BackgroundColor="DarkGray"
                                        TextColor="#FFFFFF"
                                        CornerRadius="10"
                                        Margin="2"
                                        Grid.Column="1"
                                        Clicked="OnCategoryButtonClicked" />
                            </Grid>

                            <!-- Второй ряд кнопок -->
                            <Grid ColumnDefinitions="*, *" RowDefinitions="Auto" Margin="0,5,0,0">
                                <Button x:Name="CategorySport"
                                        Text="Sport"
                                        BackgroundColor="DarkGray"
                                        TextColor="#FFFFFF"
                                        CornerRadius="10"
                                        Margin="2"
                                        Clicked="OnCategoryButtonClicked" />
                                <Button x:Name="CategoryScience"
                                        Text="Science"
                                        BackgroundColor="DarkGray"
                                        TextColor="#FFFFFF"
                                        CornerRadius="10"
                                        Margin="2"
                                        Grid.Column="1"
                                        Clicked="OnCategoryButtonClicked" />
                            </Grid>

                            <!-- Третий ряд кнопок -->
                            <Grid ColumnDefinitions="*, *" RowDefinitions="Auto" Margin="0,5,0,0">
                                <Button x:Name="CategoryBusiness"
                                        Text="Business"
                                        BackgroundColor="DarkGray"
                                        TextColor="#FFFFFF"
                                        CornerRadius="10"
                                        Margin="2"
                                        Clicked="OnCategoryButtonClicked" />
                                <Button x:Name="CategoryEducation"
                                        Text="Education"
                                        BackgroundColor="DarkGray"
                                        TextColor="#FFFFFF"
                                        CornerRadius="10"
                                        Margin="2"
                                        Grid.Column="1"
                                        Clicked="OnCategoryButtonClicked" />
                            </Grid>

                            <!-- Четвертый ряд кнопок -->
                            <Grid ColumnDefinitions="*, *" RowDefinitions="Auto" Margin="0,5,0,0">
                                <Button x:Name="CategorySocial"
                                        Text="Social"
                                        BackgroundColor="DarkGray"
                                        TextColor="#FFFFFF"
                                        CornerRadius="10"
                                        Margin="2"
                                        Clicked="OnCategoryButtonClicked" />
                                <Button x:Name="CategoryHealth"
                                        Text="Health"
                                        BackgroundColor="DarkGray"
                                        TextColor="#FFFFFF"
                                        CornerRadius="10"
                                        Margin="2"
                                        Grid.Column="1"
                                        Clicked="OnCategoryButtonClicked" />
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Short Description Section -->
                        <Label Text="Short description"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               Margin="0,10,0,-15" />
                        <Frame BackgroundColor="#3D3D3D" CornerRadius="10" Padding="10" BorderColor="Transparent">
                            <ScrollView VerticalOptions="FillAndExpand" HeightRequest="120">
                                <Editor x:Name="EventDescriptionInput"
                                        Placeholder="Describe the event..."
                                        TextColor="#FFFFFF"
                                        FontSize="16"
                                        AutoSize="TextChanges"
                                        BackgroundColor="Transparent"
                                        IsReadOnly="False" />
                            </ScrollView>
                        </Frame>

                        <!-- Location -->
                        <VerticalStackLayout>
                            <Label Text="Location" FontSize="16" TextColor="White" HorizontalOptions="Center" FontAttributes="Bold" Margin="0,10,0,0"/>
                            <!-- Контейнер с прокруткой для поля ввода -->
                            <Grid VerticalOptions="FillAndExpand" BackgroundColor="Transparent">
                                <!-- Поле ввода с прокруткой -->
                                <Frame BackgroundColor="#3D3D3D" CornerRadius="15" Padding="10" BorderColor="Transparent">
                                    <ScrollView VerticalOptions="FillAndExpand" HeightRequest="100">
                                        <Editor x:Name="EventLocationInput"
                                                Placeholder="Venue..."
                                                TextColor="#FFFFFF"
                                                FontSize="16"
                                                AutoSize="TextChanges"
                                                BackgroundColor="Transparent"
                                                IsReadOnly="False" />
                                    </ScrollView>
                                </Frame>

                                <!-- Кнопки переключения-->
                                <HorizontalStackLayout HorizontalOptions="End">
                                    <Border Padding="-20" Margin="0,5,0,90">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="15,0,15,0"/>
                                        </Border.StrokeShape>
                                        <Button x:Name="OnlineButton"
                                                Text="online"
                                                FontSize="10"
                                                TextColor="White"
                                                BackgroundColor="DarkGray" 
                                                CornerRadius="0"
                                                BorderColor="White"
                                                BorderWidth="0.1"
                                                WidthRequest="80"
                                                HeightRequest="40"
                                                Clicked="OnLocationButtonClicked">
                                        </Button>
                                    </Border>

                                    <Border Padding="-20" Margin="0,5,5,90">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="0,15,0,15"/>
                                        </Border.StrokeShape>
                                        <Button x:Name="OfflineButton"
                                                Text="offline"
                                                FontSize="10"
                                                TextColor="White"
                                                BackgroundColor="DarkGray"
                                                CornerRadius="0"
                                                BorderColor="White"
                                                BorderWidth="0.1"
                                                WidthRequest="80"
                                                HeightRequest="40"
                                                Clicked="OnLocationButtonClicked">
                                        </Button>
                                    </Border>
                                </HorizontalStackLayout>
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Иконка удаления мероприятия -->
                        <ImageButton x:Name="DeleteEventButton"
                                     Source="trash_icon.png"
                                     BackgroundColor="Transparent"
                                     WidthRequest="24"
                                     HeightRequest="24"
                                     HorizontalOptions="Center"
                                     VerticalOptions="End"
                                     IsVisible="{Binding IsEditingEvent}"
                                     Clicked="OnDeleteEventClicked" />
                    </VerticalStackLayout>
                </Frame>
            </ScrollView>
        </ContentView>


    </Grid>

</ContentPage>