<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="SLON.RequestsAcceptedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisPage"
    Title="      Requests / Accepted"
    BackgroundColor="{DynamicResource BackGroundColor}">

    <!-- Делаем две строки: шапка и список -->
    <Grid RowDefinitions="Auto,*" Padding="10">
        <!-- Шапка с переключателем -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <HorizontalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <!-- Кнопка Requests -->
                <Border Padding="-10" 
            Margin="0,5,0,0"
            Stroke="{DynamicResource BorderColor}"
            StrokeThickness="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15,0,15,0"/>
                    </Border.StrokeShape>
                    <Button x:Name="RequestsButton"
                Text="Requests"
                FontSize="12"
                TextColor="White"
                BackgroundColor="{DynamicResource BackGroundColorButtonPurple}"
                CornerRadius="0"
                BorderColor="Transparent"
                BorderWidth="0"
                WidthRequest="85"
                HeightRequest="55"
                Clicked="OnRequestsClicked"/>
                </Border>

                <!-- Кнопка Accepted -->
                <Border Padding="-10" 
            Margin="0,5,0,0"
            Stroke="{DynamicResource BorderColor}"
            StrokeThickness="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="0,15,0,15"/>
                    </Border.StrokeShape>
                    <Button x:Name="AcceptedButton"
                Text="Accepted"
                FontSize="12"
                TextColor="White"
                BackgroundColor="{DynamicResource BackGroundColorButtonGray}"
                CornerRadius="0"
                BorderColor="Transparent"
                BorderWidth="0"
                WidthRequest="85"
                HeightRequest="55"
                Clicked="OnAcceptedClicked"/>
                </Border>
            </HorizontalStackLayout>
        </Grid>

        <!-- Прокручиваемый список -->
        <CollectionView 
            x:Name="UsersCollectionView"
            Grid.Row="1"
            Margin="0,10,0,0"
            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal"
                                 Padding="5"
                                 Margin="5"
                                 BackgroundColor="{DynamicResource BackGroundColorCardInfo}">

                        <!-- Тап по профилю -->
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUserTapped" />
                        </StackLayout.GestureRecognizers>

                        <!-- Аватар + имя + описание -->
                        <HorizontalStackLayout Spacing="10">
                            <Image Source="default_profile_icon.png"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   VerticalOptions="Start"
                                   Aspect="AspectFill"/>

                            <VerticalStackLayout Spacing="2" VerticalOptions="CenterAndExpand">
                                <Label Text="{Binding FullName}"
                                    TextColor="{DynamicResource TextColor}"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    LineBreakMode="TailTruncation"
                                    MaxLines="1"
                                    WidthRequest="280" />

                                <Label Text="{Binding Vocation}"
                                    TextColor="{DynamicResource TextColor}"
                                    FontSize="14"
                                    LineBreakMode="TailTruncation"
                                    MaxLines="1"
                                    WidthRequest="280" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <!-- Кнопки Accept / Decline -->
                        <Grid ColumnSpacing="10"
                              RowSpacing="0"
                              Margin="0,5,0,0"
                              IsVisible="{Binding Source={x:Reference ThisPage}, Path=IsRequestsMode}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                        <!-- Кнопки Decline/Accept -->
                            <Grid ColumnDefinitions="*,*"
                              ColumnSpacing="10"
                              IsVisible="{Binding Source={x:Reference ThisPage}, Path=IsRequestsMode}"/>
                            <Button Text="Decline"
                                    TextColor="white"
                                    BackgroundColor="{DynamicResource BackGroundColorSwapRed}"
                                    Grid.Column="0"
                                    IsVisible="{Binding Source={x:Reference ThisPage}, Path=IsRequestsMode}"
                                    Clicked="OnDeclineClicked"
                                    Margin="5,0,5,0"
                                    WidthRequest="80"
                                    HeightRequest="40"/>
                            <Button Text="Accept"
                                    TextColor="White"
                                    BackgroundColor="{DynamicResource BackGroundColorSwapGreen}"
                                    Grid.Column="1"
                                    Clicked="OnAcceptClicked"/>
                        </Grid>
                    </StackLayout>
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
