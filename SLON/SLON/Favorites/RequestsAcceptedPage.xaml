<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="SLON.RequestsAcceptedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisPage"
    Title="      Requests / Accepted"
    BackgroundColor="#141414">

    <VerticalStackLayout>
        <Grid Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Переключатель Requests / Accepted -->
            <HorizontalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <Border Padding="-10" Margin="0,5,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15,0,15,0"/>
                    </Border.StrokeShape>
                    <Button x:Name="RequestsButton"
                            Text="Requests"
                            FontSize="12"
                            TextColor="White"
                            BackgroundColor="#915AC5"
                            CornerRadius="0"
                            BorderColor="White"
                            BorderWidth="0.1"
                            WidthRequest="85"
                            HeightRequest="55"
                            Clicked="OnRequestsClicked"/>
                </Border>

                <Border Padding="-10" Margin="0,5,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="0,15,0,15"/>
                    </Border.StrokeShape>
                    <Button x:Name="AcceptedButton"
                            Text="Accepted"
                            FontSize="12"
                            TextColor="White"
                            BackgroundColor="DarkGray"
                            CornerRadius="0"
                            BorderColor="White"
                            BorderWidth="0.1"
                            WidthRequest="85"
                            HeightRequest="55"
                            Clicked="OnAcceptedClicked"/>
                </Border>
            </HorizontalStackLayout>
        </Grid>

        <CollectionView x:Name="UsersCollectionView" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" Margin="5" BackgroundColor="#222222" Spacing="10">
                        <!-- Тап по профилю -->
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUserTapped" />
                        </StackLayout.GestureRecognizers>

                        <!-- Верхняя часть: аватар + имя + описание -->
                        <HorizontalStackLayout Spacing="10">
                            <Image Source="default_profile_icon1.png"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   VerticalOptions="Start"
                                   Aspect="AspectFill"/>

                            <VerticalStackLayout Spacing="2" VerticalOptions="CenterAndExpand">
                                <Label Text="{Binding FullName}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    LineBreakMode="TailTruncation"
                                    MaxLines="1"
                                    WidthRequest="280" />

                                <Label Text="{Binding Vocation}"
                                    TextColor="White"
                                    FontSize="14"
                                    LineBreakMode="TailTruncation"
                                    MaxLines="1"
                                    WidthRequest="280" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <!-- Кнопки Accept / Decline -->
                        <Grid ColumnSpacing="10"
                              RowSpacing="0"
                              Margin="0,5,0,0"
                              IsVisible="{Binding Source={x:Reference ThisPage}, Path=IsRequestsMode}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Text="Decline"
                    TextColor="White"
                    BackgroundColor="#D9534F"
                    CornerRadius="10"
                    Grid.Column="0"
                    Clicked="OnDeclineClicked"
                    HeightRequest="40"/>

                            <Button Text="Accept"
                    TextColor="White"
                    BackgroundColor="#5CB85C"
                    CornerRadius="10"
                    Grid.Column="1"
                    Clicked="OnAcceptClicked"
                    HeightRequest="40"/>
                        </Grid>
                    </StackLayout>
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
