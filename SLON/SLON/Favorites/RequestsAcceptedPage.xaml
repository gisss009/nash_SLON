<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="SLON.RequestsAcceptedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisPage"
    Title="Requests / Accepted"
    BackgroundColor="#141414">

    <!-- Делаем две строки: шапка и список -->
    <Grid RowDefinitions="Auto,*" Padding="10">
        <!-- Шапка с переключателем -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <HorizontalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <Border Padding="-10" Margin="0,5,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15,0,15,0"/>
                    </Border.StrokeShape>
                    <Button x:Name="RequestsButton"
                            Text="Requests"
                            FontSize="12"
                            TextColor="White"
                            BackgroundColor="#915AC5"
                            CornerRadius="0"
                            BorderColor="White"
                            BorderWidth="0.1"
                            WidthRequest="85"
                            HeightRequest="55"
                            Clicked="OnRequestsClicked"/>
                </Border>
                <Border Padding="-10" Margin="0,5,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="0,15,0,15"/>
                    </Border.StrokeShape>
                    <Button x:Name="AcceptedButton"
                            Text="Accepted"
                            FontSize="12"
                            TextColor="White"
                            BackgroundColor="DarkGray"
                            CornerRadius="0"
                            BorderColor="White"
                            BorderWidth="0.1"
                            WidthRequest="85"
                            HeightRequest="55"
                            Clicked="OnAcceptedClicked"/>
                </Border>
            </HorizontalStackLayout>
        </Grid>

        <!-- Прокручиваемый список -->
        <CollectionView 
            x:Name="UsersCollectionView"
            Grid.Row="1"
            Margin="0,10,0,0"
            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" Margin="0,0,0,10" BackgroundColor="#222222" Spacing="10">
                        <!-- Тап по профилю -->
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUserTapped" />
                        </StackLayout.GestureRecognizers>

                        <!-- Аватар + имя + описание -->
                        <HorizontalStackLayout Spacing="10">
                            <Image Source="default_profile_icon1.png"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   VerticalOptions="Start"
                                   Aspect="AspectFill"/>
                            <VerticalStackLayout Spacing="2" VerticalOptions="CenterAndExpand">
                                <Label Text="{Binding FullName}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="1"/>
                                <Label Text="{Binding Vocation}"
                                       TextColor="White"
                                       FontSize="14"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="1"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <!-- Кнопки Decline/Accept -->
                        <Grid ColumnDefinitions="*,*"
                              ColumnSpacing="10"
                              IsVisible="{Binding Source={x:Reference ThisPage}, Path=IsRequestsMode}">
                            <Button Text="Decline"
                                    TextColor="White"
                                    BackgroundColor="#D9534F"
                                    CornerRadius="10"
                                    Clicked="OnDeclineClicked"/>
                            <Button Text="Accept"
                                    TextColor="White"
                                    BackgroundColor="#5CB85C"
                                    CornerRadius="10"
                                    Grid.Column="1"
                                    Clicked="OnAcceptClicked"/>
                        </Grid>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
