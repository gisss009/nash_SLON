<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="SLON.RequestsAcceptedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisPage"
    Title="      Requests / Accepted"
    BackgroundColor="{DynamicResource BackGroundColor}">

    <VerticalStackLayout>
        <Grid Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Переключатель Requests / Accepted -->
            <HorizontalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <Border Padding="-10" Margin="0,5,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15,0,15,0"/>
                    </Border.StrokeShape>
                    <Button x:Name="RequestsButton"
                            Text="Requests"
                            FontSize="12"
                            TextColor="White"
                            BackgroundColor="{DynamicResource BackGroundColorButtonPurple}"
                            CornerRadius="0"
                            BorderColor="{DynamicResource BorderColor}"
                            BorderWidth="0.1"
                            WidthRequest="85"
                            HeightRequest="55"
                            Clicked="OnRequestsClicked"/>
                </Border>

                <Border Padding="-10" Margin="0,5,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="0,15,0,15"/>
                    </Border.StrokeShape>
                    <Button x:Name="AcceptedButton"
                            Text="Accepted"
                            FontSize="12"
                            TextColor="White"
                            BackgroundColor="{DynamicResource BackGroundColorButtonGray}"
                            CornerRadius="0"
                            BorderColor="{DynamicResource BorderColor}"
                            BorderWidth="0.1"
                            WidthRequest="85"
                            HeightRequest="55"
                            Clicked="OnAcceptedClicked"/>
                </Border>
            </HorizontalStackLayout>
        </Grid>

        <CollectionView x:Name="UsersCollectionView" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal"
                                 Padding="5"
                                 Margin="5"
                                 BackgroundColor="{DynamicResource BackGroundColorCardInfo}">

                        <!-- Тап по профилю -->
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUserTapped" />
                        </StackLayout.GestureRecognizers>

                        <Frame CornerRadius="50"  
                             IsClippedToBounds="True"  
                             WidthRequest="48"
                             HeightRequest="48">
                            <Image Source="default_profile_icon.png"
                                 Aspect="AspectFill" />
                        </Frame>
                        <VerticalStackLayout Spacing="2" Margin="10,5,0,0">
                            <Label Text="{Binding Name}" TextColor="{DynamicResource TextColor}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding Vocation}" TextColor="{DynamicResource TextColor}" FontSize="14"/>
                        </VerticalStackLayout>

                        <!-- Кнопки Accept/Decline только в режиме Requests -->
                        <Grid HorizontalOptions="EndAndExpand" VerticalOptions="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Text="Decline"
                                    TextColor="{DynamicResource TextColor}"
                                    BackgroundColor="{DynamicResource BackGroundColorSwapRed}"
                                    Grid.Column="0"
                                    IsVisible="{Binding Source={x:Reference ThisPage}, Path=IsRequestsMode}"
                                    Clicked="OnDeclineClicked"
                                    Margin="5,0,5,0"
                                    WidthRequest="80"
                                    HeightRequest="40"/>
                            <Button Text="Accept"
                                    TextColor="{DynamicResource TextColor}"
                                    BackgroundColor="{DynamicResource BackGroundColorSwapGreen}"
                                    Grid.Column="1"
                                    IsVisible="{Binding Source={x:Reference ThisPage}, Path=IsRequestsMode}"
                                    Clicked="OnAcceptClicked"
                                    Margin="5,0,0,0"
                                    WidthRequest="80"
                                    HeightRequest="40"/>
                        </Grid>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
